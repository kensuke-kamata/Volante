Language: Cpp
BasedOnStyle: LLVM
IndentWidth: 4
UseTab: Never
AccessModifierOffset: -4
ColumnLimit: 100
PointerAlignment: Left
SeparateDefinitionBlocks: Always
SortIncludes: CaseSensitive
IncludeBlocks: Regroup
IncludeCategories:
  - Regex: '^<.*\.h>'
    Priority: 0
  - Regex: '^<.*>'
    Priority: 1
  - Regex: '^".*\.h"$'
    Priority: 2
    SortPriority: 2
  - Regex: '^".*"'
    Priority: 3
